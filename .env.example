# Application
NODE_ENV=development
PORT=3000

# Payment Configuration
# Mode: 'demo' for sandbox testing, 'production' for live payments
PAYMENT_MODE=demo

# OPay API Configuration (for production)
OPAY_SECRET_KEY=your_opay_secret_key_here
OPAY_API_URL=https://api.opaycheckout.com
OPAY_PUBLIC_KEY=your_opay_public_key_here

# Demo Mode Configuration
DEMO_OPAY_API_URL=https://sandbox.opaycheckout.com
DEMO_OPAY_CASHIER_URL=https://sandbox.opaycheckout.com/demo

# Payment Processing
PAYMENT_CALLBACK_TIMEOUT=30000

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=noreply@tradehub.com

# Database Configuration (for future production use)
DATABASE_URL=postgresql://user:password@localhost:5432/tradehub
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
SENTRY_DSN=

# Security
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d

# CORS
CORS_ORIGIN=http://localhost:3000

# Ping Message (for testing)
PING_MESSAGE=pong
